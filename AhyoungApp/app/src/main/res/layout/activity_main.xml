<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="#391706">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="재미있는 페이지로 안내해드립니다!"
        android:layout_marginVertical="30dp"
        android:textColor="@color/white"
        android:textSize="25dp"
        android:layout_gravity="center"/>
    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/pop"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="40dp"/>
    <RadioGroup
        android:id="@+id/rGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RadioButton
            android:id="@+id/rdoRecommendation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="스웨덴 추천장소"
            android:textColor="@color/white"/>
        <RadioButton
            android:id="@+id/rdoRecommendation2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="미국 추천장소"
            android:textColor="@color/white"/>
        <RadioButton
            android:id="@+id/rdoRecommendation3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="러시아 추천장소"
            android:textColor="@color/white"/>
        <RadioButton
            android:id="@+id/rdoPop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="카라멜 나라"
            android:textColor="@color/white"/>
        <RadioButton
            android:id="@+id/rdoChocolate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="초콜릿 나라"
            android:textColor="@color/white"/>
    </RadioGroup>
    <Button
        android:id="@+id/openNew"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="선택된 페이지 열기"
        android:layout_marginVertical="15dp"
        android:background="#000000"
        android:textColor="#ffffff"/>

</LinearLayout>